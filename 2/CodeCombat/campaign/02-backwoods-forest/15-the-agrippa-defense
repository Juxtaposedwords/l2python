
loop:
    flag = self.findFlag()
    enemy = self.findNearestEnemy()
    if flag:
        self.pickUpFlag(flag)
    elif enemy and self.distanceTo(enemy) < 4:
        if self.isReady("cleave") :
            self.cleave(enemy)
        else:
            self.attack(enemy)
        
